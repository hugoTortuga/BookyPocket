<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterBookFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailsBookText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView"
                android:textScaleX="1.5" />

            <TextView
                android:id="@+id/details_titleText"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="TextView" />

            <EditText
                android:id="@+id/details_titleValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:text="Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_authorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="TextView" />

            <EditText
                android:id="@+id/register_authorValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="30dp"
                android:text="Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_publicationYearText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="TextView" />

            <EditText
                android:id="@+id/register_publicationYearValue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="date"
                android:paddingLeft="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details_categoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="TextView" />

            <Spinner
                android:id="@+id/register_categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"/>

            <View
                android:id="@+id/divider"
                android:layout_width="347dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_scanButton"
                android:layout_width="246dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/button_style"
                android:text="Button"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>